<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">
    <ImageView
        android:layout_width="@dimen/login_field"
        android:layout_height="100dp"
        android:src="@drawable/tmdb"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="50dp"/>
    <EditText
        android:layout_width="@dimen/login_field"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large_plus"
        android:id="@+id/et_login"
        android:hint="@string/login"
        android:textColorHint="@color/login_hint"
        android:backgroundTint="@color/tmdb_base"
        android:textColor="@color/tmdb_base"/>
    <EditText
        android:layout_width="@dimen/login_field"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large_plus"
        android:id="@+id/et_password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="@color/login_hint"
        android:backgroundTint="@color/tmdb_base"
        android:textColor="@color/tmdb_base"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_20"
            android:text="@string/log_in"
            android:textSize="@dimen/text_size_large"
            android:id="@+id/btn_login"
            style="?android:buttonBarButtonStyle"
            android:textColor="@color/tmdb_base"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cont"
            android:textSize="@dimen/text_size_large"
            android:id="@+id/btn_continue"
            style="?android:buttonBarButtonStyle"
            android:textColor="@color/tmdb_base"/>
    </LinearLayout>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_remember"
        android:text="@string/remember"
        android:textSize="@dimen/text_size_large"
        android:checked="true"
        android:buttonTint="@color/tmdb_base"/>
</LinearLayout>